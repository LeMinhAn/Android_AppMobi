<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/rlWallPaperContainer"
    android:background="@color/background"
    android:padding="1dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivImageWallPaper" />

    <vn.appsmobi.ui.ShortActionButton
        android:id="@+id/btDownloadImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/ivImageWallPaper"
        android:layout_alignRight="@+id/ivImageWallPaper"></vn.appsmobi.ui.ShortActionButton>
</RelativeLayout>